{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "suamox",
  "version": "0.1.0",
  "identifier": "com.suamox.app",

  "build": {
    "frontendDist": "./Front"
  },

  "app": {
    "withGlobalTauri": true,

    "windows": [
      {
        "label": "main",
        "title": "BochicaHDL-Simulation",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "focus": true
      }
    ],

    "security": {
      "capabilities": ["default"],

      "csp": {
        "default-src": "'self'",
        "script-src": "'self' 'unsafe-eval' 'unsafe-inline'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data:",
        "font-src": "'self'",
        "connect-src": "'self' tauri://*",
        "frame-src": "'self'"
      }
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
